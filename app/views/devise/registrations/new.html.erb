<h2>Регистрация пользователя</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @user} %>

  <div class="col-md-6 buffer-top">

    <div class="form-group has-feedback">
      <%= f.email_field :email, autofocus: true, placeholder: "Email", class: 'span2 form-control' %>
      <span class="add-on form-control-feedback">
        <i class="glyphicon glyphicon-envelope form-control-feedback"></i></span>
    </div>

    <div class="form-group has-feedback">
      <%= f.text_field :name, placeholder: "Имя", class: 'span2 form-control' %>
      <span class="add-on form-control-feedback">
        <i class="glyphicon glyphicon-user form-control-feedback"></i></span>
    </div>

    <div class="form-group has-feedback">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Пароль", class: 'span2 form-control' %>
      <span class="add-on form-control-feedback">
        <i class="glyphicon glyphicon-lock form-control-feedback"></i></span>
    </div>

    <div class="form-group has-feedback">
      <%= f.password_field :password_confirmation, autocomplete: "off",
                           placeholder: "Подтверждение пароля", class: 'span2 form-control' %>
      <span class="add-on form-control-feedback">
        <i class="glyphicon glyphicon-lock form-control-feedback"></i></span>
    </div>

    <div class="actions">
      <%= f.submit "Зарегистрироваться", class: 'btn btn-primary' %>
    </div>

    <div class="buffer-top">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
