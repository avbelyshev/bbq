<h2>Вход</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="col-md-6 buffer-top">

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, placeholder: "Email", class: 'span2' %>
      <span class="add-on"><i class="glyphicon glyphicon-envelope"></i></span>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Пароль", class: 'span2' %>
      <span class="add-on"><i class="glyphicon glyphicon-lock"></i></span>
    </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

    <div class="actions">
      <%= f.submit "Зарегистрироваться", class: 'btn btn-primary' %>
    </div>

    <div class="buffer-top">
      <%= link_to 'Войти', new_user_session_path %><br />
      <%= link_to "Забыли пароль?", new_user_password_path %><br />
    </div>
  </div>
<% end %>
